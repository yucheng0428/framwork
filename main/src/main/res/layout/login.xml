<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fr_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/login_bg"/>

        <ImageView
            android:id="@+id/login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="159dp"
            android:background="@mipmap/login_logo" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="309dp"
            android:layout_marginLeft="59dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/login_username"/>

            <EditText
                android:id="@+id/et_user"
                android:layout_width="219dp"
                android:layout_marginLeft="22dp"
                android:hint="请输入用户名"
                android:maxLines="1"
                android:inputType="text"
                android:imeOptions="actionNext"
                android:textColorHint="#444444"
                android:layout_height="wrap_content"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="372dp"
            android:layout_marginLeft="59dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@mipmap/login_pw"/>

            <EditText
                android:inputType="textPassword"
                android:id="@+id/et_password"
                android:layout_width="219dp"
                android:layout_marginLeft="22dp"
                android:textColorHint="#444444"
                android:hint="请输入密码"
                android:imeOptions="actionDone"
                android:lines="1"
                android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/ll_yzm"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="435dp"
            android:layout_marginLeft="59dp">

            <ImageView
                android:layout_gravity="center_vertical"
                android:id="@+id/img_code"
                android:layout_width="70dp"
                android:layout_height="30dp"/>

            <EditText
                android:id="@+id/et_code"
                android:inputType="textPassword"
                android:layout_width="180dp"
                android:layout_marginLeft="10dp"
                android:textColorHint="#444444"
                android:hint="请输入验证码"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </FrameLayout>

    <Button
        android:id="@+id/btn_login"
        android:layout_below="@id/fr_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/login_bt"
        android:layout_marginLeft="61dp"
        android:layout_marginRight="61dp"
        android:textColor="#FFFFFF"
        android:textSize="8pt"
        android:text="登 录"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/login_bottom_logo"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"/>




</RelativeLayout>