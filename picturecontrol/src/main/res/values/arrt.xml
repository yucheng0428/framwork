<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="backColor" format="color" />
    <declare-styleable name="roundedimageview">
        <attr name="border_thickness" format="dimension" />
        <attr name="border_inside_color" format="color" />
        <attr name="border_outside_color" format="color"/>
    </declare-styleable>


    <declare-styleable name="ToggleButton">
        <attr name="borderWidth" format="dimension" />
        <attr name="offBorderColor" format="reference|color" />
        <attr name="offColor" format="reference|color" />
        <attr name="onColor" format="reference|color" />
        <attr name="spotColor" format="reference|color" />
        <attr name="animate" format="reference|boolean" />
    </declare-styleable>


    <declare-styleable name="RedTextView">
        <attr name="text" format="string" />
    </declare-styleable>

    <declare-styleable name="QTContentLayout">
        <attr name="cl_contentLayoutId" format="reference" />
        <attr name="cl_loadingLayoutId" format="reference" />
        <attr name="cl_emptyLayoutId" format="reference" />
        <attr name="cl_errorLayoutId" format="reference" />
    </declare-styleable>

    <declare-styleable name="CircularProgressView">
        <attr name="backWidth" format="dimension" />    <!--背景圆环宽度-->
        <attr name="progWidth" format="dimension" />    <!--进度圆环宽度-->
        <attr name="backColor"  />        <!--背景圆环颜色-->
        <attr name="progColor" format="color" />        <!--进度圆环颜色-->
        <attr name="progStartColor" format="color" />   <!--进度圆环开始颜色-->
        <attr name="progFirstColor" format="color" />   <!--进度圆环结束颜色-->
        <attr name="progress" format="integer" />       <!--圆环进度-->
    </declare-styleable>

    <declare-styleable name="MaxScrollView">
        <attr name="max_height" format="dimension"></attr>
    </declare-styleable>

    <!--
     max                 最大进度
     startAngle             进度从圆环的哪个角度开始走
     backColor             圆环内部的填充色
     roundColor             圆环的颜色
     roundProgressColor  圆环进度的颜色
     roundWidth             圆环宽度
     textColor             中心文字的颜色
     textSize             中心文字的大小
     textIsDisplayable     中心文字是否显示
     style = 0/1          进度的风格，实心或者空心
  -->
    <declare-styleable name="RoundProgressBar">
        <attr name="max" format="integer"/>
        <attr name="startAngle" format="integer"/>
        <attr name="roundColor" format="color"/>
        <attr name="roundProgressColor" format="color"/>
        <attr name="roundWidth" format="dimension"/>
        <attr name="backColor" />
        <attr name="progressTextColor" format="color" />
        <attr name="progressTextSize" format="dimension" />
        <attr name="textIsDisplayable" format="boolean"/>
        <attr name="style">
            <enum name="STROKE" value="0"></enum>
            <enum name="FILL" value="1"></enum>
        </attr>
    </declare-styleable>

    <declare-styleable name="ProgressWheel">
        <attr name="matProg_progressIndeterminate" format="boolean" />
        <attr name="matProg_barColor" format="color" />
        <attr name="matProg_rimColor" format="color" />
        <attr name="matProg_rimWidth" format="dimension" />
        <attr name="matProg_spinSpeed" format="float" />
        <attr name="matProg_barSpinCycleTime" format="integer" />
        <attr name="matProg_circleRadius" format="dimension" />
        <attr name="matProg_fillRadius" format="boolean" />
        <attr name="matProg_barWidth" format="dimension" />
        <attr name="matProg_linearProgress" format="boolean" />
    </declare-styleable>

    <declare-styleable name="AttachView">
        <attr name="backgroundColor" format="color"/>
    </declare-styleable>

    <declare-styleable name="CameraView">
        <attr name="direction" format="enum">
            <enum name="BACK" value="0" />
            <enum name="FRONT" value="1" />
        </attr>
    </declare-styleable>
</resources>