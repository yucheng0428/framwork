<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_color"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="8dp">

        <ImageView
            android:id="@+id/attach_type"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_marginRight="8dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ico_file_defult" />

        <TextView
            android:id="@+id/attach_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="xxxx.doc" />

        <TextView
            android:id="@+id/attach_size"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="center_vertical|right"
            android:text="100k"
            android:textColor="@color/darkgrey"
            android:textSize="12sp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/file_reTryText"
            android:textSize="12sp"
            android:gravity="center"
            android:paddingLeft="8dp"
            android:textColor="@color/bg_blue"
            android:text="点击重试"
            android:layout_width="wrap_content"
            android:layout_height="32dp" />
    </LinearLayout>

    <ProgressBar
        android:progressDrawable="@drawable/attachfile_progressbar_style"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_marginLeft="15dp"
        android:id="@+id/file_progress"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:progress="0"
        android:max="100" />

</LinearLayout>
