<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.lib.picturecontrol.cameralibary.CameraView
        android:id="@+id/cv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:direction="BACK"/>

    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="80dp"
        android:scaleType="fitXY"
        android:visibility="invisible"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:padding="12dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:scaleType="centerInside"
            android:src="@drawable/btn_return_selector" />

        <ImageView
            android:id="@+id/bt_change"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:scaleType="centerInside"
            android:src="@mipmap/camera_change" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_gravity="bottom"
        android:background="#000000"
        android:paddingLeft="24dp"
        android:paddingRight="24dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:background="@drawable/album_bg"
            android:visibility="gone"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/pic_file_inner"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:layout_margin="3dp"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_file_loading" />
        </LinearLayout>

        <com.lib.picturecontrol.cameralibary.wegit.ShutterView
            android:id="@+id/bt_take"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/bt_reLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="获取地址"
            android:visibility="gone" />

        <TextView
            android:id="@+id/bt_graffiti"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:text="编辑"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:visibility="gone" />
    </FrameLayout>
</FrameLayout>
