<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">


        <EditText
            android:layout_gravity="center_vertical"
            android:id="@+id/et_phone_no"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_phone"
            android:drawableRight="@mipmap/icon_person_costact"
            android:drawablePadding="@dimen/padding_20"
            android:hint="请输手机号"
            android:inputType="text"
            android:maxLength="15"
            android:maxLines="1"
            android:textStyle="normal" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="77dp"
        android:orientation="horizontal">

        <EditText
            android:layout_gravity="center_vertical"
            android:id="@+id/et_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="24dp"
            android:background="@null"
            android:drawableLeft="@mipmap/icon_person"
            android:drawablePadding="@dimen/padding_10"
            android:hint="请输联系人姓名"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:lines="1"
            android:textStyle="normal" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_ok"
        android:layout_width="290dp"
        android:layout_height="44dp"
        android:layout_above="@+id/iv_msg"
        android:layout_marginLeft="42dp"
        android:layout_marginTop="73.5dp"
        android:layout_marginRight="42dp"
        android:background="@drawable/btn_blue"
        android:text="确  定"
        android:textColor="#FFFFFF"
        android:textSize="8pt" />
</LinearLayout>