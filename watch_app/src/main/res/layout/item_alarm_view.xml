<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_10"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_message_icon"
        android:layout_width="39dp"
        android:layout_height="39dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:src="@mipmap/icon_message_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">


        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@+id/tv_do"
            android:text="xxx离开了安全区，快去土城药店PK，打了爆装备"
            android:textColor="@color/color_222222"
            android:textSize="15.5dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_below="@+id/tv_message_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@+id/tv_do"
            android:gravity="right"
            android:textSize="13.5dp"
            android:maxLength="50"
            android:ellipsize="end"
            android:layout_marginTop="@dimen/padding_15"
            android:textColor="@color/color_333333"
            android:paddingRight="@dimen/padding_10"
            android:text="1111111" />

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_10"
            android:singleLine="true"
            android:text="处理"
            android:textColor="@color/color_248bfe"
            android:textSize="15dp" />
    </RelativeLayout>

</LinearLayout>