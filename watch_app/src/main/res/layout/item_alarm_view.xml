<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_10"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/iv_message_icon"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/padding_10"
        android:layout_marginRight="@dimen/padding_10"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:background="@color/bg_blue" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="12dp">


        <TextView
            android:id="@+id/tv_message_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_toLeftOf="@+id/tv_do"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="1"
            android:text="xxx离开了安全区，快去土城药店PK，打了爆装备"
            android:textColor="@color/color_222222"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_message_title"
            android:layout_marginTop="@dimen/padding_15"
            android:layout_toLeftOf="@+id/tv_do"
            android:ellipsize="end"
            android:gravity="left"
            android:maxLength="50"
            android:paddingRight="@dimen/padding_10"
            android:text="1111111"
            android:textColor="@color/color_333333"
            android:textSize="13.5dp" />

        <TextView
            android:id="@+id/tv_do"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/padding_10"
            android:gravity="center"
            android:paddingLeft="@dimen/padding_10"
            android:singleLine="true"
            android:text="处理"
            android:textColor="@color/color_248bfe"
            android:textSize="15dp" />

        <ImageView
            android:id="@+id/iv_postion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_do"
            android:layout_alignParentRight="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="1dp"
            android:src="@mipmap/img_postion_img" />
    </RelativeLayout>

</LinearLayout>