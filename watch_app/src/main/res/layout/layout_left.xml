<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_939ba4"
        android:orientation="horizontal"
        android:paddingTop="20dp"
        android:paddingBottom="30dp">

        <LinearLayout
            android:id="@+id/layout_head"
            android:layout_width="54dp"
            android:layout_height="54dp"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:background="@drawable/shape_stroke_round_four_dp"
            android:gravity="center">

            <com.lib.common.widgt.RoundImageView
                android:id="@+id/iv_head"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="center"
                android:src="@mipmap/defaul_head" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/layout_head"
            android:orientation="vertical"
            android:paddingLeft="20dp">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="姓 名 :"
                android:textColor="@color/white"
                android:textSize="26dp" />

            <TextView
                android:id="@+id/tv_idNo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="身份证号:"
                android:textColor="@color/white"
                android:textSize="24sp" />

            <TextView
                android:id="@+id/tv_position"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:text="用户编号:"
                android:textColor="@color/white"
                android:textSize="24sp" />
        </LinearLayout>
    </RelativeLayout>


    <TextView
        android:id="@+id/tv_unbind"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/icon_my_setting_go"
        android:paddingRight="15dp"
        android:text="解除绑定"
        android:padding="20dp"
        android:textColor="@color/color_333333"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/tv_about"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/icon_my_setting_go"
        android:paddingRight="15dp"
        android:text="关于我们"
        android:padding="20dp"
        android:textColor="@color/color_333333"
        android:textSize="26sp" />
    <TextView
        android:id="@+id/tv_out_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:drawableRight="@mipmap/icon_my_setting_go"
        android:paddingRight="15dp"
        android:text="退出登录"
        android:padding="20dp"
        android:textColor="@color/color_333333"
        android:textSize="26sp" />

</LinearLayout>