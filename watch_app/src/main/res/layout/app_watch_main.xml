<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/item_head" />

        <RelativeLayout
            android:id="@+id/layout_stat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@mipmap/home_bg"
            android:minHeight="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:drawableLeft="@drawable/ruand_blue"
                android:drawablePadding="15dp"
                android:text="手表在线"
                android:textColor="@color/white" />

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_stat"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="27dp"
                android:drawableLeft="@mipmap/icon_dc"
                android:drawablePadding="15dp"
                android:text="50%"
                android:textColor="@color/white" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_no_bind"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="12dp"
            android:background="@mipmap/home_bg"
            android:minHeight="100dp"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:id="@+id/tv_no_bind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="您还未绑定手表，请先绑定"
                android:textSize="16dp"
                android:layout_centerInParent="true"
                android:textColor="@color/color_41ED61"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <include
                layout="@layout/layout_xy"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />


            <include
                layout="@layout/layout_xl"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:background="@mipmap/icon_home_item_bg2"
            android:drawableLeft="@mipmap/icon_postion"
            android:drawablePadding="@dimen/padding_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textSize="14dp"
            android:text="实时位置" />

        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/icon_home_item_bg2"
            android:drawableLeft="@mipmap/icon_contacts"
            android:drawablePadding="@dimen/padding_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_20"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:textSize="14dp"
            android:text="紧急联系人" />
    </LinearLayout>

</ScrollView>