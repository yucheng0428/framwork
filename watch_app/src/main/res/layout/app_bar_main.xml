<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_e5e5e5">

    <LinearLayout
        android:id="@+id/layout_stat"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/layout_head" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:background="@color/white"
            android:minHeight="100dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_stat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="20dp"
                android:text="手表在线" />

            <TextView
                android:id="@+id/tv_power"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_stat"
                android:layout_marginLeft="80dp"
                android:layout_marginTop="10dp"
                android:text="50%" />

            <ImageView
                android:id="@+id/iv_watch"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@+id/tv_power"
                android:src="@mipmap/icon_watch" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:minHeight="200dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@mipmap/icon_data"
                android:gravity="center_vertical"
                android:text="最近一次检测" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_margin="5dp"
                android:background="@color/color_e5e5e5" />

            <include layout="@layout/layout_xy" />

            <View
                android:layout_width="match_parent"
                android:layout_height="3px"
                android:layout_margin="5dp"
                android:background="@color/color_e5e5e5" />

            <include layout="@layout/layout_xl" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_position"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_postion"
            android:drawablePadding="@dimen/padding_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10"
            android:text="实时位置" />

        <TextView
            android:id="@+id/tv_contacts"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="5dp"
            android:background="@color/white"
            android:drawableLeft="@mipmap/icon_contacts"
            android:drawablePadding="@dimen/padding_10"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/padding_10"
            android:text="紧急联系人" />
    </LinearLayout>

</ScrollView>