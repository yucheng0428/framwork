<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_xl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@mipmap/icon_home_item_bg"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title_xl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="27dp"
        android:text="心率"
        android:textColor="@color/color_333333"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_value_xl"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:background="@mipmap/icon_xl_bg"
        android:gravity="center"
        android:text="正常"
        android:textColor="@color/white"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/tv_value_unit_xl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="28dp"
        android:text="120/80 bpm"
        android:textColor="@color/color_FF562E"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/tv_resh_time_xl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="31dp"
        android:drawableLeft="@mipmap/icon_resh"
        android:drawablePadding="4dp"
        android:text="2020-11-01"
        android:textSize="12sp" />

</LinearLayout>